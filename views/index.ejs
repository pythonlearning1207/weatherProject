                        </g>
                      </svg>
                    HUMIDITY
                </h3>
                <h2><%= humidity %>%</h2>
            </div>
        </div>
        <!-- next 6 days forecast -->
        <div class="period black-box">
            <h3>6-DAY FORECAST</h3>
            <div class="next-6">
                <div class="current-day-box">
                    <h3><%= datesTime[0] %></h3>
                    <p><%= dayCondition[0] %></p>
                    <%= daysTemps[0] %>°
                </div>
                <div>
                    <h3><%= datesTime[1] %></h3>
                    <p><%= dayCondition[1] %></p>
                    <%= daysTemps[1] %>°
                </div>
                <div>
                    <h3><%= datesTime[2] %></h3>
                    <p><%= dayCondition[2] %></p>
                    <%= daysTemps[2] %>°
                </div>
                <div>
                    <h3><%= datesTime[3] %></h3>
                    <p><%= dayCondition[3] %></p>
                    <%= daysTemps[3] %>°
                </div>
                <div>
                    <h3><%= datesTime[4] %></h3>
                    <p><%= dayCondition[4] %></p>
                    <%= daysTemps[4] %>°
                </div>
                <div>
                    <h3><%= datesTime[5] %></h3>
                    <p><%= dayCondition[5] %></p>
                    <%= daysTemps[5] %>°
                </div>
            </div>
        </div>
        <div class="UV black-box">
            <h3>UV INDEX</h3>
            <h2><%= uvLevel %></h2>
        </div>
        <div class="wind black-box">
            <h3>WIND</h3>
            <h2><%= windspeed %>MPH</h2>
        </div>

    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function(){
            var condition = '<%= condition %>';
            var backgroundImage;
            
            if (condition.includes('Snow')) {
                backgroundImage = 'snow.jpg';
            } else if (condition.includes('Rain')) {
                backgroundImage = 'rain.jpg';
            } else if(condition.includes('Partially cloudy')){
                backgroundImage = 'cloudy.jpg';
            } else if(condition.includes('Overcast')){
                backgroundImage = 'rain.jpg';
            } else if(condition.includes('Clear')){
                backgroundImage = 'sunny.jpg';
            } else {
                backgroundImage = 'sunny.jgp';
            }

            document.body.style.backgroundImage = `url('/images/${backgroundImage}')`;
            document.body.style.backgroundSize = 'cover';
            document.body.style.backgroundPosition = 'center';
        })
    </script>

</body>
</html>