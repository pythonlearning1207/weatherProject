<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>weatherProject</title>
    <link rel="stylesheet" href="styles/styles.css">
</head>
<body>
    <div class="container">
    
        <!-- Enter city info -->
        <div class="location black-box">
            <form action="/submit" method="POST">
                <label for="cityName">City</label>
                <input type="text" id="cityName" name="cityName">
                <button type="submit">Submit</button>
            </form>
        </div>

        <!-- Next 6 hours forecast -->
        <div class="hourly black-box">
            <h3>HOURLY FORECAST</h3>
            <div class="hourlyData">
                <div class="current-hour-box">
                    <h3><%= hoursinfo[0] %></h3>
                    <h3><%= tempsinfo[0] %>°</h3>
                </div>
                <div>
                    <h3><%= hoursinfo[1] %></h3>
                    <h3><%= tempsinfo[1] %>°</h3>
                </div>
                <div>
                    <h3><%= hoursinfo[2] %></h3>
                    <h3><%= tempsinfo[2] %>°</h3>
                </div>
                <div>
                    <h3><%= hoursinfo[3] %></h3>
                    <h3><%= tempsinfo[3] %>°</h3>
                </div>
                <div>
                    <h3><%= hoursinfo[4] %></h3>
                    <h3><%= tempsinfo[4] %>°</h3>
                </div>
                <div>
                    <h3><%= hoursinfo[5] %></h3>
                    <h3><%= tempsinfo[5] %>°</h3>
                </div>
            </div>
        </div>

        <!-- current weather info -->
        <div class="current">
            <div class="current-weather">
                <h1><%= cityName %></h1>
                <h2><%= currentTemp %></h2>
                
                <p><%= description %></p>
            </div>
